<!DOCTYPE html>
<html>
<body>

	<label>Enter diag no : </label>
	<input type="number" id="n">
	<button onclick="main()">Print</button>
	<script>

		function main() {
			
			var n = document.getElementById("n").value;
			var s = n - 1;
			
            for (var i = 1; i <= n; i++) {

                for (var c = 1; c <= s; c++) 
                    document.write("&nbsp");

                s--;

                for (c = 1; c <= 2 * i - 1; c++)
                    document.write('*');

                document.write('<br>');
            }

            s = 1;
            for(i = 1; i <= n - 1; i++) {

                for (c = 1; c <= s; c++)
                document.write("&nbsp");
                s++;

                for(c = 1; c <= 2 * (n - i) - 1; c++)
                    document.write('*');
                
                document.write('<br>');
            }

			
			
			}

	</script>
</body>
</html>
